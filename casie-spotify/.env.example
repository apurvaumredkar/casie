# SpotiBot Environment Variables
# Copy this file to .env and fill in your actual values

# Discord Configuration
# Get these from: https://discord.com/developers/applications
DISCORD_PUBLIC_KEY=your_discord_public_key_here
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Spotify Configuration
# Get these from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# OAuth State Secret (CRITICAL SECURITY)
# Generate a strong random secret for signing OAuth state parameters
# NEVER use DISCORD_PUBLIC_KEY or any other public value
# Generate with: openssl rand -base64 32
SPOTIFY_STATE_SECRET=your_random_secret_here

# OAuth Redirect URI
# For local dev: http://localhost:8787/oauth/callback
# For production: https://your-worker-subdomain.workers.dev/oauth/callback
SPOTIFY_REDIRECT_URI=http://localhost:8787/oauth/callback

# OpenRouter Configuration (for /spotify natural language command)
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=meta-llama/llama-4-scout:free
